<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/crime_title" />

    <EditText
        android:id="@+id/crime.detail.title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/crime_title" />

    <Button
        android:id="@+id/crime.detail.date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/crime.detail.solved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/crime_solved" />

    <Button
        android:id="@+id/crime.detail.save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save_crime" />
</LinearLayout>